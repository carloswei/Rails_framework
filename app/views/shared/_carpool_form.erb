<%= form_for(@carpool) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">

      <%= f.label :time%>
      <%= f.text_field :time,class:"time" %>

      <%= f.label :From%>
      <%=f.text_field :fromplace,placeholder: "Such as Waterloo"%>

      <%= f.label :To%>
      <%=f.text_field :toplace,placeholder: "Such as Toronto"%>

      <%=f.label :Price%>
      <%=f.text_field :price%>

      <%=f.label :Contact%>
      <%=f.text_field :contact%>

      <%=f.label :Notes%>
      <%= f.text_area :notes, placeholder: "add more information about your carpool..." %>

    </div>
    <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>