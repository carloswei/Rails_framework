<header class="navbar navbar-fixed-top navbar-inverse" id="carheader">

  <div class="container">

     <div class="col-sm-1">
       <%= link_to "ECa", root_path, id: "logo" %>
     </div>

    <div class="col-sm-8">
       <% if logged_in? %>
           <%=render "layouts/searchbar"%>
       <% end %>
    </div>

    <div class="col-sm-3">
      <nav>
         <ul class="nav navbar-nav navbar-right">
           <li class="nav_header"><%= link_to "Home", root_path %></li>
           <% if logged_in? %>
               <li class="dropdown navbar-header nav_header">
                   <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                          Account <b class="caret"></b>
                   </a>
                 <ul class="dropdown-menu">
                    <li><%= link_to "Users", users_path %></li>
                    <li><%= link_to "Profile", current_user %></li>
                    <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                    <li class="divider"></li>
                    <li class ="nav_header">
                    <%= link_to "Log out", logout_path, method: "delete" %>
                    </li>
                 </ul>
               </li>
           <% else %>
              <li class="navbar-header nav_header"><%= link_to "Log in", login_path %></li>
         <% end %>
      </ul>
     </nav>
    </div>
  </div>
</header>