
  <div class="col-sm-8">

     <%= form_tag search_path, :method => "get" do%>

        <div class="container">

          <div class="row">

             <div class="col-sm-2">
                <%= search_field_tag 'fromplace',nil,placeholder:"From"%>
             </div>

             <div class="col-sm-2">
               <%= search_field_tag 'toplace',nil,placeholder:"To"%>
             </div>

            <div class="col-sm-2">
              <%= search_field_tag 'time',nil,class:"time",placeholder:"Time"%>
            </div>

            <div class="col-sm-2">
              <button type="submit">Search</button>
            </div>

          </div>



        </div>
      <%end%>

  </div>